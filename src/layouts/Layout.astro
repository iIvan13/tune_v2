---
import 'remixicon/fonts/remixicon.css';
import Aside from '../components/Aside.astro';
import Player from '../components/Player.jsx';
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
		  href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;500;600;700;800;900&display=swap"
		  rel="stylesheet"
		/>

		<!-- Transitions -->
		<ViewTransitions fallback='none'/>
	</head>

	<body class="bg-[#f4f6ff] min-h-screen">
		<div class="pt-6 px-3 md:px-6 gap-6 w-full flex">
			<Aside/>
			<main class="flex flex-col gap-10">
				<slot />
			</main>
		</div>
		<Player transition:persist client:visible transition:name="player"/>
	</body>

</html>

<style is:global>
	body{
		font-family: "Barlow", sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue';
	}

	main{
		width: calc(100% - 270px);
	}

	*::-webkit-scrollbar {
    	width: 6px;
    	height: 6px;
      }

    *::-webkit-scrollbar-thumb {
        background: #0080ff6a;
        border-radius: 4px;
    }

    *::-webkit-scrollbar-thumb:hover {
        background: #0059ffbe;
    }

    *::-webkit-scrollbar-thumb:active {
    	background-color: #0059ffbe;
    }

    @media (max-width: 768px) {
		main{
			width: 100%;
		}

    	*::-webkit-scrollbar-thumb {
      		background: #0059ffbe;
    	}
      }
</style>
